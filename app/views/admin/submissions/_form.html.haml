- unless @submission.new_record?
  = image_tag @submission.photo.url(:thumb)

= form_for [:admin, @project, @submission], html: { multipart: true } do |f|
  - if @submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@submission.errors.count, "error")} prohibited this submission from being saved:"
      %ul
        -@submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :photo
    = f.file_field :photo
  .field
    = f.label :facebook_name
    = f.text_field :facebook_name
  .field
    = f.label :facebook_id, 'Facebook ID'
    = f.text_field :facebook_id
  .field
    = f.label :facebook_email
    = f.text_field :facebook_email
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.hidden_field :project_id
    = f.submit