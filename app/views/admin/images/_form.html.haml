= form_for [:admin, @project, @image], html: {multipart: true} do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :image
    = f.file_field :image

  .field
    = f.label :description
    = f.text_field :description

  .actions
    = f.hidden_field :project_id
    = f.submit
