%p
  = link_to '<i class="icon-plus"></i> New Image'.html_safe, new_admin_project_image_path(@project), class: "btn", title: "New"

.well
  %h6 Stats
  #{@project.images.all.count} total

= paginate(@images, window: 5)

%table.table.table-striped.table-bordered
  %tr
    %th{width: 250}= sort_by "name"
    - %w{state description updated_at}.each do |c|
      %th.sort= sort_by c
    %th Image

    - @images.each do |image|
      %tr{class: (video.state == 'approved' ? nil : "inactive")}
        %td
          = image.name
          .actions
            = link_to '<i class="icon-edit"></i>'.html_safe, [:edit, :admin, @project, image], class: "btn", title: "Edit"
            - if image.state == 'approved'
              = link_to '<i class="icon-ban-circle"></i>'.html_safe, deny_admin_project_image_path(@project, image, format: :json), remote: true, class: "deny btn"
            - elsif
              = link_to '<i class="icon-ok-circle"></i>'.html_safe, approve_admin_project_image_path(@project, image, format: :json), remote: true, class: "approve btn"
            = link_to '<i class="icon-trash"></i>'.html_safe, polymorphic_url([:admin, @project, image], format: :json), remote: true, confirm: 'Are you sure?', method: :delete, class: "btn", title: "Delete"
        %td= image.state
        %td= image.description
        %td= l image.updated_at, format: :custom
        %td= image_tag(image.image.url) if image.image?

= paginate(@images, window: 5)