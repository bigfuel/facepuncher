%p
  = link_to 'Back', admin_project_releases_path(@project), title: "Back", class: "btn btn-inverse"

.row
  .span6
    = form_for [:admin, @project, @release], html: { multipart: true, class: "form-horizontal"} do |f|
      - if @release.errors.any?
        .alert.alert-error
          %p
            %b
              = "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
          %ul
            - @release.errors.full_messages.each do |msg|
              %li= msg

      %fieldset
        %legend= controller_action
        .control-group
          = f.label :live_date, class: "control-label"
          .controls= f.text_field :live_date, class: "datetimepicker"

        .control-group
          = f.label :description, class: "control-label"
          .controls= f.text_field :description

        .control-group
          = f.label :branch, class: "control-label"
          .controls= f.text_field :branch

        .form-actions
          = f.submit 'Save', class: 'btn btn-primary'