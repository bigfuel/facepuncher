%p
  = link_to 'Back', admin_project_facebook_events_path(@project), title: "Back", class: "btn btn-inverse"

.row
  .span6
    = form_for [:admin, @project, @facebook_event], html: { class: "form-horizontal"} do |f|
      - if @facebook_event.errors.any?
        .alert.alert-error
          %p
            %b
              = "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
          %ul
            - @facebook_event.errors.full_messages.each do |msg|
              %li= msg

      %fieldset
        %legend= controller_action
        .control-group
          = f.label :name, class: "control-label"
          .controls= f.text_field :name

        .control-group
          = f.label :limit, class: "control-label"
          .controls= f.text_field :limit

        .form-actions
          = f.submit 'Save', class: 'btn btn-primary'