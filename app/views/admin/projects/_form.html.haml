%p
  = link_to 'Back', admin_projects_path, title: "Back", class: "btn btn-inverse"

.row
  .span6
    = form_for [:admin, @project], html: {multipart: true, class: "form-horizontal"} do |f|
      - if @project.errors.any?
        .alert.alert-error
          %p
            %b
              = "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
          %ul
            - @project.errors.full_messages.each do |msg|
              %li= msg

      %fieldset
        %legend= controller_action
        .control-group
          = f.label :name, class: "control-label"
          .controls= f.text_field :name

        .control-group
          = f.label :description, class: "control-label"
          .controls= f.text_field :description

        .control-group
          = f.label :facebook_app_id, 'Facebook app ID', class: "control-label"
          .controls= f.text_field :facebook_app_id

        .control-group
          = f.label :facebook_app_secret, class: "control-label"
          .controls= f.text_field :facebook_app_secret

        .control-group
          = f.label :repo, class: "control-label"
          .controls= f.text_field :repo

        .control-group
          = f.label :google_analytics_tracking_code, class: "control-label"
          .controls= f.text_field :google_analytics_tracking_code

        .control-group
          = f.label :production_url, class: "control-label"
          .controls= f.text_field :production_url

        .form-actions
          = f.submit 'Save', class: 'btn btn-primary'