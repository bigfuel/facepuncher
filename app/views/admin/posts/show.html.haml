- unless notice.blank?
  #notice.alert= notice

%p
  = link_to 'Back', admin_project_posts_path(@project), title: "Back", class: "btn btn-inverse"
  = link_to '<i class="icon-plus"></i>'.html_safe, new_admin_project_post_path(@project), title: "New", class: "btn"
  = link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_project_post_path(@project), title: "Edit", class: "btn"
  - if @post.state == 'approved'
    = link_to '<i class="icon-ban-circle"></i>'.html_safe, deny_admin_project_post_path(@project, @post, format: :json), remote: true, class: "deny btn"
  - elsif
    = link_to '<i class="icon-ok-circle"></i>'.html_safe, approve_admin_project_post_path(@project, @post, format: :json), remote: true, class: "approve btn"
.row
  .span6
    %table.table.table-bordered
      %tr
        %td Created at
        %td= @post.created_at
      %tr
        %td Updated at
        %td= @post.updated_at
      %tr
        %td State
        %td= @post.state
      %tr
        %td Title
        %td= @post.title
      %tr
        %td Content
        %td= @post.content
      %tr
        %td URL
        %td= @post.url
      %tr
        %td Tags
        %td= @post.tags
      %tr
        %td Image
        %td
          - unless @post.image.blank?
            = image_tag @post.image.url

