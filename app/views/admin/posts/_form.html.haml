= form_for [:admin, @project, @post], html: { multipart: true } do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit
